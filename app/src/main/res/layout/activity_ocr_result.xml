<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OcrBookMenu">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/library_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@+id/button_selectAll">

    </androidx.recyclerview.widget.RecyclerView>


    <CheckBox
        android:id="@+id/button_selectAll"
        android:layout_width="88dp"
        android:layout_height="53dp"
        android:layout_marginStart="70dp"
        android:text="전체"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/library_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="88dp"
        android:layout_height="52dp"
        android:layout_marginEnd="128dp"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_selectAll" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="88dp"
        android:layout_height="52dp"
        android:layout_marginEnd="28dp"
        android:text="취소"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>